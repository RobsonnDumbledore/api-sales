{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["ES6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": false,
        "typeRoots": [
          "@types",
          "./node_modules/@types"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "paths": {
          "@config/*": ["src/config/*"],
          "@shared/*": ["src/shared/*"],
          "@modules/*": ["src/modules/*"],
        }
    }
}
